<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>


<div><%=image_url ("code.png") %></div>

<h3>時間</h3>
<%= distance_of_time_in_words(Time.now, Time.now + 60.seconds, include_seconds: true)%> <br>
<%= time_ago_in_words(10.hours.from_now) %><br>
<%= select_hour(Time.now + 6.hours)%>時 <br>
<%= select_datetime(Time.now + 4.days)%>時 <br>
<%= select_day(Time.now + 2.days)%>


<h3>チェック</h3>
<%= check_box_tag("article", "validated") %>
<%= select_tag([ "VISA", "MasterCard" ]) %>

<%= field_set_tag do %>
  <p><%= text_field_tag 'name' %></p>
<% end %>


<h3>javascript</h3>
<%= javascript_tag "('すべて良好')" %> 



<h3>Number</h3>
<%= number_to_currency(120.50) %> <br>
<%= number_to_human_size(123400000000000) %> <br>
<%= number_to_percentage(100, precision: 0) %> <br>
<%= number_to_phone(1235551234) %> <br>
<%= number_with_delimiter(12345678) %> <br>



<%= strip_links('ブログ: <a href="http://myblog.com/">開く</a>')%>


<%= csrf_meta_tags %>